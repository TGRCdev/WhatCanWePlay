<html>
    <head>
        {% block head %}
        {% block meta %}
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="A web app for finding Steam games you and your friends already own.">
        <meta name="author" content="TGRCDev">
        {% endblock %}

        <title>
            {% block title %}{% endblock %}
            {% block title_postfix %}
             - What Can We Play?
            {% endblock %}
        </title>

        {% block styles %}
        <link rel="stylesheet" href="static/styles/default_dark.css" />
        {% endblock %}

        {% block scripts %}
        {% endblock %}

        {% endblock %}
        {% if contact_email_user_reversed and contact_email_domain_reversed %}
        <script>
            window.addEventListener("load",function() {
                var contact = this.document.getElementById("contact-link")
                var mailto = ":otliam"
                var user = "{{ contact_email_user_reversed }}"
                var address = "{{ contact_email_domain_reversed }}"
                contact.href = mailto.split("").reverse().join("") + user.split("").reverse().join("") + "@" + address.split("").reverse().join("")
            })
        </script>
        {% endif %}
    </head>
    <body>
        <div id="page-flexbox">
            <div id="header-box">
                <a id="title-link" href="/">What Can We Play?</a>
            </div>
            <div id="body-box">
                {% block content %}
                {% endblock %}
            </div>
            <div id="footer-box">
                <div>
                    <div id="copyright">Â© 2020 TGRCDev</div>
                    {% if commit %}<div id="commit">Commit <a href="{{ source_url ~ '/commit/' ~ commit }}">{{ commit }}</a></div>{% endif %}
                </div>
                <nav id="footer-nav">
                    {% if donate_url %}<a id="donate" href="{{ donate_url }}">Donate</a> | {% endif -%}
                    <a href="/privacy">Privacy</a> | 
                    {% if source_url %}<a href="{{ source_url }}">Source</a> | {% endif -%}
                    {% if contact_email_user_reversed and contact_email_domain_reversed %}<a id="contact-link">Contact</a>{% endif %}
                </nav>
            </div>
        </div>
    </body>
</html>